{
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/Outliner.ts",
    "src/Voidifier.ts",
    "test/TestOutliner.ts",
    "test/TestVoidifier.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
    //"esModuleInterop": true
  }
}
